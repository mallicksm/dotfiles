# .bashrc
# Source Silicon Team bashrc
if [ -f /opt/tools/bin/silicon_team_bashrc ]; then
#  . /opt/tools/bin/silicon_team_bashrc
   . /etc/bashrc
elif [ -f /etc/bashrc ]; then # look for system bashrc if we dont find the silicon team file
   . /etc/bashrc
fi

#
# User customization starts here
#

source ~/dotfiles/bash_functions.sh
if [[ -f ~/corp_settings.sh ]]; then
   source ~/corp_settings.sh
else 
   echo "Attention: setup ~/corp_settings.sh" 
   return
fi
source ~/dotfiles/bash_aliases.sh
#
# User customization starts here
#
bind '"\e[A": history-search-backward'
bind '"\e[B": history-search-forward'
bind '"\e[C": forward-char'
bind '"\e[D": backward-char'

# tmux settings
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# User specific settings, aliases, functions, etc.
[[ -f ~/${USER}.bashrc ]] && source ~/${USER}.bashrc
[[ -f ~/${USER}.aliases ]] && source ~/${USER}.aliases

modpath ~/.fzf/bin b
modpath ~/.local/bin b
modpath ~/bin b
modpath ~/arm-tools/xpacks/.bin b
modpath ~/.local/arm-tools/arm-gnu-toolchain-12.3.rel1-x86_64-aarch64-none-elf/bin b
modpath ~/.local/nvim-macos/bin b
modpath /opt/tools/bin a
modpath /opt/si/emu/users/soummya/tools/ads/bin b
modpath /opt/tools/qnx/7.1/host/linux/x86_64/usr/bin a
# Auto-completion
# ---------------
[[ $- == *i* ]] && source "${HOME}/.fzf/shell/completion.bash" 2> /dev/null

# Key bindings
# ------------
source "${HOME}/.fzf/shell/key-bindings.bash"

# Starship configuration
export STARSHIP_CONFIG=$HOME/.starship.toml
export STARSHIP_LOG=error
function set_win_title(){
   # set title
   echo -ne "\033]0; [$SHLVL] $USER@$(hostname -s)  $PWD\007"
   # sync history across windows
   history -a;history -c;history -r
}
starship_precmd_user_func="set_win_title"
eval "$(starship init bash)"
