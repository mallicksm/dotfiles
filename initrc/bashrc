# .bashrc
source /usr/share/lsf/conf/profile.lsf 2>/dev/null
source ~/corp_settings.sh
source ~/dotfiles/bash_functions.sh
source ~/dotfiles/bash_aliases.sh

# Sensible cli setup
if [[ $- == *i* ]]; then
   stty sane
   set -o vi
   set -o physical
   set t_Co=256
   umask 002
   shopt -s cdspell
   shopt -s histappend
   shopt -s cdable_vars
   shopt -s autocd
   shopt -s direxpand
   bind '"\e[A": history-search-backward'  # sane arrow keys
   bind '"\e[B": history-search-forward'
   bind '"\e[C": forward-char'
   bind '"\e[D": backward-char'
fi

export HISTCONTROL="erasedups:ignoredups" HISTSIZE=1000000 HISTFILESIZE=1000000000 HISTIGNORE='pwd:exit:fg:bg:top:clear:history:ls:ll:uptime:df'
export EDITOR=vim
export IGNOREEOF=1 # use exit to leave shell
export CDPATH+=.:
