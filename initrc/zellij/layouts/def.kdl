layout {
   default_tab_template {
      pane size=1 borderless=true {
         plugin location="zellij:tab-bar"
      }
      children
      pane size=2 borderless=true {
         plugin location="zellij:status-bar"
      }
   }

   tab name="Palladium" focus=true {
      pane split_direction="vertical" {
         pane size="50%" {
            pane stacked=true {
               pane
               pane
            }
         }
         pane size="50%" split_direction="horizontal" {
            pane size="70%"  {
               pane
            }
            pane size="30%"  {
               pane stacked=true {
                  pane
                  pane
               }
            }
         }
      }
   }
   tab name="Code" {
      pane stacked=true {
         pane cwd="../emu_c_tests/smr5_cli" 
         pane cwd="../emu_c_tests/a78_cli" 
         pane cwd="../emu_c_tests/smr5_fd" 
      }
   }
   tab name="Waves" {
      pane stacked=true {
         pane
         pane
      }
   }
   tab name="Lazygit" {
      pane stacked=true {
         pane command="lazygit"
         pane
      }
   }
}
