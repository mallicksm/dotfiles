{
   "item header": {
      "prefix": ["header"],
      "body": [
         "${LINE_COMMENT}===============================================================================",
         "${LINE_COMMENT} Created: $CURRENT_MONTH_NAME_SHORT-$CURRENT_DATE-$CURRENT_YEAR",
         "${LINE_COMMENT} Author: ${VIM:\\$USER}",
         "${LINE_COMMENT}",
         "${LINE_COMMENT} Note:",
         "${LINE_COMMENT}",
         "${LINE_COMMENT} Description: ${1:Description}",
         "${LINE_COMMENT}",
         "${LINE_COMMENT}==============================================================================="
      ],
      "description": "Code snippet for 'header' statement"
   },
   "item datesstamp": {
      "prefix": ["$date"],
      "body": "$CURRENT_MONTH_NAME_SHORT-$CURRENT_DATE-$CURRENT_YEAR",
      "description": "Insert Date Stamp"
   },
   "item guard": {
      "prefix": ["guard"],
      "body": [
         "#ifndef ${1:__${TM_FILENAME/(.*)/${1:/upcase}/g}__}",
         "#define ${1}",
         "#endif"
      ],
      "description": "Code snippet for 'guard' statement"
   },
   "item timestamp": {
      "prefix": ["$time"],
      "body": [
         "$CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND"
      ],
      "description": "insert time code"
   },
   "item user": {
      "prefix": ["user"],
      "body": [
         "${VIM:\\$USER}"
      ],
      "description": "user code"
   }
}
