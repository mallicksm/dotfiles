{
   "item header": {
      "prefix": ["header"],
      "body": [
         "${LINE_COMMENT}===============================================================================",
         "${LINE_COMMENT} Created: $CURRENT_MONTH_NAME_SHORT-$CURRENT_DATE-$CURRENT_YEAR",
         "${LINE_COMMENT} Author: ${VIM:\\$USER}",
         "${LINE_COMMENT}",
         "${LINE_COMMENT} Note:",
         "${LINE_COMMENT}",
         "${LINE_COMMENT} Description: ${1:Description}",
         "${LINE_COMMENT}",
         "${LINE_COMMENT}===============================================================================",
         "if exists('g:${TM_FILENAME_BASE/(.*)/${1:/upcase}/g}_LOADED')",
         "  finish",
         "end",
         "let g:${TM_FILENAME_BASE/(.*)/${1:/upcase}/g}_LOADED = 1",
         "${0}"
      ],
      "description": "Code snippet for 'header' statement"
   },
   "item function": {
      "prefix": ["function", "func", "proc"],
      "body": [
         "function! ${1:functionName}()",
         "   ${2:functionContents}",
         "endfunction"
      ],
      "description": "Code snippet for 'function' statement"
   },
   "item augroup": {
      "prefix": ["augroup", "autogroup", "autogrp", "augrp"],
      "body": [
         "augroup ${1:augroupName}",
         "   autocmd!",
         "   autocmd",
         "augroup end"
      ],
      "description": "Code snippet for 'au' statement"
   },
   "item if": {
      "prefix": ["if"],
      "body": [
         "if number > 0",
         "elseif number == 0",
         "else",
         "endif"
      ],
      "description": "Code snippet for 'if' statement"
   }
}
